<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f4f1"
    tools:context="com.geeky7.rohit.govhack2017.MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/top"
        android:layout_above="@+id/guest"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="93dp" />

    <Button
        android:id="@+id/guest"
        android:layout_width="221dp"
        android:layout_height="68dp"
        android:text="@string/guest"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="157dp"
        android:layout_above="@+id/host"
        android:layout_alignStart="@+id/host"
        android:layout_marginBottom="73dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/host"
        android:layout_marginBottom="21dp"
        android:src="@mipmap/middle"
        android:layout_alignStart="@+id/host"
        android:layout_alignEnd="@+id/host" />

    <Button
        android:id="@+id/host"
        android:layout_width="221dp"
        android:layout_height="60dp"
        android:text="@string/host"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="279dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="143dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/bottom" />

</RelativeLayout>
